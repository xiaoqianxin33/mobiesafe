<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_liuliang__listview_item_icon"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_centerVertical="true"
        android:src="@drawable/app" />

    <TextView
        android:id="@+id/tv_liuliang__listview_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5dip"
        android:layout_toRightOf="@id/iv_liuliang__listview_item_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="计算器"
        android:textSize="24sp" />


    <ImageView
        android:id="@+id/iv_liuliang__listview_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:src="@drawable/list_button_details_pressed" />


</RelativeLayout>
