<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiao.mobiesafe.activity.KillVirusActivity">

    <TextView
        style="@style/TitleStyle"
        android:text="手机杀毒" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fl_killvirus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_scanner_malware"
            android:padding="7dp">

            <ImageView
                android:id="@+id/iv_killvirus_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/act_scanning_03" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_killvirus_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/fl_killvirus"
            android:singleLine="true"
            android:text="1234567890" />

        <ProgressBar
            android:id="@+id/pb_killvirus"
            style="@style/HeimaProgressBarHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/tv_killvirus_title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/fl_killvirus" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_killrus"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"></LinearLayout>
    </ScrollView>

</LinearLayout>
